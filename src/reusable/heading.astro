---
/**
 * Astro Heading component
 * Port of src/reusable/heading.jsx
 *
 * Props:
 * - level: 1|2|3|4|5|6 (default 1)
 * - size: one of ['3XL','2XL','XL','L','M','S','XS','2XS','3XS'] (default 'S')
 * - class: optional extra class names
 *
 * Usage:
 *  <Heading level={2} size="M">Section title</Heading>
 */

interface Props {
	level?: 1|2|3|4|5|6;
	size?: '3XL'|'2XL'|'XL'|'L'|'M'|'S'|'XS'|'2XS'|'3XS';
	class?: string;
}

const {
	level = 1,
	size = 'S',
	class: className = '',
	...attrs
} = Astro.props as Props;

const classes = `heading heading--${size} ${className}`.trim();
---

{level === 1 && <h1 class={classes} {...attrs}><slot /></h1>}
{level === 2 && <h2 class={classes} {...attrs}><slot /></h2>}
{level === 3 && <h3 class={classes} {...attrs}><slot /></h3>}
{level === 4 && <h4 class={classes} {...attrs}><slot /></h4>}
{level === 5 && <h5 class={classes} {...attrs}><slot /></h5>}
{level === 6 && <h6 class={classes} {...attrs}><slot /></h6>}

<style>
	.heading {
	}

	/* Typography tokens mirrored from reusable/utils.jsx (TYPOGRAPHY) */

	/* 3XL */
	.heading--3XL {
		font-family: 'Crimson Text';
		font-size: 2.25rem;
		line-height: 1.25;
	}
	@media only screen and (min-width: 641px) {
		.heading--3XL {
			font-family: 'Crimson Text';
			font-size: 3.5rem;
			line-height: 1.125;
		}
	}

	/* 2XL */
	.heading--2XL {
		font-family: 'Crimson Text';
		font-size: 2.25rem;
		line-height: 1.25;
	}

	/* XL */
	.heading--XL {
		font-size: 2rem;
		font-weight: 800;
		line-height: 1.25;
	}

	/* L */
	.heading--L {
		font-size: 1.75rem;
		font-weight: 600;
		line-height: 1.25;
	}

	/* M */
	.heading--M {
		font-size: 1.5rem;
		font-weight: 600;
		line-height: 1.25;
	}

	/* S */
	.heading--S {
		font-size: 1.25rem;
		font-weight: 600;
	}

	/* XS */
	.heading--XS {
		font-size: 1.125rem;
	}

	/* 2XS */
	.heading--2XS {
		font-size: 1rem;
	}

	/* 3XS */
	.heading--3XS {
		font-size: 0.875rem;
		font-weight: 800;
		letter-spacing: 1.25px;
		text-transform: uppercase;
	}
</style>

