---
/**
 * TemplateContent Component
 * Converted from src/components/aside-layout.js - TemplateContent
 * 
 * Main content area in Template layout
 */
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`template-content ${className}`}>
  <slot />
</div>

<style>
  .template-content {
    margin-bottom: 2rem;
  }
  
  /* Positioning inside basic (641px+) and aside (920px+) grids */
  @media only screen and (min-width: 641px) {
    .template-content {
      grid-area: content;
    }
  }
</style>
