---
/**
 * Template Component
 * Converted from src/components/aside-layout.js - Template
 * 
 * Two variants:
 *  - "aside" (default) — content + sidebar, 2-column grid (news, events, etc.)
 *    Slots: TemplateContent (grid-area: content) + TemplateSide (grid-area: side)
 *  - "basic" — top / side / content, 3-area grid (basic pages with side nav)
 *    Slots: TemplateTop (grid-area: top) + TemplateSide (grid-area: side) + TemplateContent (grid-area: content)
 */
import Margins from './Margins.astro';

interface Props {
  asideWidth?: string;
  contentSide?: 'left' | 'right';
  variant?: 'aside' | 'basic';
  class?: string;
}

const { 
  asideWidth = '21rem', 
  contentSide = 'left',
  variant = 'aside',
  class: className = ''
} = Astro.props;
---

<Margins>
  <div class={`template template--${variant} ${className}`} data-content-side={contentSide}>
    <slot />
  </div>
</Margins>

<style define:vars={{ asideWidth, contentSide }}>
  .template {
    margin-bottom: 4rem;
    width: 100%;
  }

  /* ─── ASIDE variant (news, events, etc.) ─── */
  @media only screen and (min-width: 641px) {
    .template--aside {
      padding: 0 0 2rem;
    }
  }

  @media only screen and (min-width: 1200px) {
    .template--aside {
      display: grid;
      padding-bottom: 3rem;
      margin-bottom: 5rem;
    }

    .template--aside[data-content-side="left"],
    .template--aside:not([data-content-side]) {
      grid-template-areas: "content side";
      grid-template-columns: 1fr calc(var(--asideWidth) + 4rem);
    }

    .template--aside[data-content-side="right"] {
      grid-template-areas: "side content";
      grid-template-columns: calc(var(--asideWidth)) 1fr;
    }
  }

  /* ─── BASIC variant (top / side nav / content) ─── */
  @media only screen and (min-width: 641px) {
    .template--basic {
      display: grid;
      grid-template-areas:
        "top top"
        "side content";
      /* 216px side nav + 3rem gap, matches Gatsby calc(216px + SPACING['4XL']) */
      grid-template-columns: calc(216px + 3rem) 1fr;
      grid-template-rows: auto 1fr;
      margin-bottom: 5rem;
    }
  }

  /* Shared panel spacing overrides */
  .template :global([data-panel-margins]),
  .template :global([data-panel]) {
    padding: 0;
  }

  .template :global([data-panel] h2) {
    margin-top: 2.5rem;
  }
</style>
