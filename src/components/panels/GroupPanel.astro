---
/**
 * GroupPanel - Panel with grouped content
 * Converted from src/components/panels/group-panel.js
 */
import Panels from './Panels.astro';

interface Props {
  data: any;
  included?: any[];
}

const { data, included = [] } = Astro.props;

const { field_panel_group_layout: fieldPanelGroupLayout, relationships } = data;

// Check if this is a 50/50 layout
const is50Layout = fieldPanelGroupLayout === '50';
const fieldPanelGroup = relationships?.field_panel_group;
---

{is50Layout && fieldPanelGroup ? (
  <div class="margins">
    <div class="panel-group-50-container">
      <Panels data={fieldPanelGroup} included={included} />
    </div>
  </div>
) : (
 null
)}

<style>
  .margins {
    margin: 0 auto;
    max-width: 1280px;
    padding: 0 1rem;
    width: 100%;
  }

  @media (min-width: 641px) {
    .margins {
      padding: 0 2.5rem;
    }
  }

  .panel-group-50-container {
    display: grid;
    margin-top: var(--spacing-xl, 2rem);
  }

  .panel-group-50-container > * {
    margin-bottom: var(--spacing-xl, 2rem);
    padding-bottom: var(--spacing-xl, 2rem);
  }

  .panel-group-50-container > *:not(:last-child) {
    border-bottom: solid 1px var(--color-neutral-100);
  }

  @media (min-width: 1129px) {
    .margins {
      padding: 0 2.5rem;
    }

    .panel-group-50-container {
      grid-gap: var(--spacing-3xl, 3rem);
      grid-template-columns: 1fr 1fr;
    }

    .panel-group-50-container > * {
      margin-bottom: var(--spacing-2xl, 2.5rem);
      padding-bottom: var(--spacing-2xl, 2.5rem);
    }

    .panel-group-50-container > *:not(:last-child) {
      border: none;
      border-right: solid 1px var(--color-neutral-100);
      padding-right: var(--spacing-3xl, 3rem);
    }
  }
</style>
