---
/**
 * CardPanel - Grid of cards with various templates
 * Converted from src/components/panels/index.js CardPanel
 * 
 * Templates: destination_hor_card_template, standard_no_image, address_and_hours, highlights, etc.
 */
import PanelTemplate from './PanelTemplate.astro';
import PanelList from './PanelList.astro';
import Icon from '../Icon.astro';
import Card from '../Card.astro';
// TODO: Import these components when they're created
// import Address from '../Address.astro';
// import Hours from '../Hours.astro';
import DotsSvg from '../DotsSvg.astro';
// import DestinationHorizontalPanel from './DestinationHorizontalPanel.astro';

interface Props {
  data: any;
}

const { data } = Astro.props;

// Extract template information
const template = data.relationships?.field_card_template?.field_machine_name;
const title = data.field_title;
const cards = data.relationships?.field_cards || [];
const noImage = template === 'standard_no_image';
const useSummary = template !== 'address_and_hours';

// Helper functions
const getCardSubtitle = (card: any) => {
  if (template === 'destination_card_template') {
    // TODO: Implement getParentTitle functionality
    return null;
  }
  return null;
};

const getImage = (image: any) => {
  return !image || noImage
    ? null
    : image?.relationships?.field_media_image?.localFile?.childImageSharp?.gatsbyImageData;
};

const getCardHref = (card: any) => {
  if (card.field_url) {
    return card.field_url.uri;
  }
  return card.fields?.slug;
};

const getSummary = (body: any) => {
  return body ? body.summary : null;
};

// Handle destination horizontal template redirect
if (template === 'destination_hor_card_template') {
  // TODO: Redirect to DestinationHorizontalPanel when created
  // return <DestinationHorizontalPanel data={data} />;
}
---

{template === 'highlights' ? (
  <div class="margins">
    <section class="highlights-section">
      <div class="margins" data-panel-margins>
        <div class="highlights-header">
          <div class="dots-container">
            <DotsSvg />
          </div>
          <h2 class="highlights-title">{title}</h2>
        </div>
        
        <ol class="highlights-grid">
          {cards.map((card: any, index: number) => {
            const columnGaps = [5, 4, 1, 4, 5];
            return (
              <li 
                class="highlights-card"
                style={`grid-column: span ${columnGaps[index]}; ${index === 2 ? 'grid-row: span 2;' : ''}`}
              >
                <a href={getCardHref(card)}>
                  <Card
                    title={card.title}
                    subtitle={getCardSubtitle(card)}
                    headingLevel={title ? 3 : 2}
                    class="highlights-card-content"
                    anchorStyleAddition={{ height: '100%', padding: 'var(--spacing-m, 1rem)' }}
                  >
                    {useSummary ? getSummary(card.body) : (
                      template === 'address_and_hours' && (
                        <div>
                          <div class="card-info-row">
                            <Icon icon="address" />
                            <!-- TODO: Replace with Address component -->
                            <span>Address placeholder</span>
                          </div>
                          <div class="card-info-row">
                            <Icon icon="access_time" />
                            <!-- TODO: Replace with Hours component -->
                            <span>Hours placeholder</span>
                          </div>
                        </div>
                      )
                    )}
                  </Card>
                </a>
              </li>
            );
          })}
        </ol>
      </div>
    </section>
  </div>
) : (
  <PanelTemplate title={title}>
    <PanelList twoColumns={noImage}>
      {cards.map((card: any, index: number) => (
        <li class="standard-card-item">
          <Card
            title={card.title}
            subtitle={getCardSubtitle(card)}
            href={getCardHref(card)}
            image={getImage(card.relationships?.field_media_image)}
            headingLevel={title ? 3 : 2}
            class="standard-card-content"
          >
            {useSummary ? getSummary(card.body) : (
              template === 'address_and_hours' && (
                <div>
                  <div class="card-info-row">
                    <Icon icon="address" />
                    <!-- TODO: Replace with Address component -->
                    <span>Address placeholder</span>
                  </div>
                  <div class="card-info-row">
                    <Icon icon="access_time" />
                    <!-- TODO: Replace with Hours component -->
                    <span>Hours placeholder</span>
                  </div>
                </div>
              )
            )}
          </Card>
        </li>
      ))}
    </PanelList>
  </PanelTemplate>
)}

<style>
  .margins {
    margin: 0 auto;
    max-width: 1280px;
    padding: 0 1rem;
    width: 100%;
  }

  @media (min-width: 641px) {
    .margins {
      padding: 0 2.5rem;
    }
  }

  /* Highlights template styles */
  .highlights-section {
    background-color: var(--color-blue-300, #1e40af);
    padding-bottom: var(--spacing-xl, 2rem);
    padding-top: var(--spacing-xl, 2rem);
  }

  @media (min-width: 641px) {
    .highlights-section {
      padding-bottom: var(--spacing-2xl, 2.5rem);
      padding-top: var(--spacing-l, 1.5rem);
    }
  }

  .highlights-header {
    display: flex;
    flex-direction: column;
    margin-bottom: var(--spacing-l, 1.5rem);
  }

  @media (min-width: 1129px) {
    .highlights-header {
      align-items: center;
      flex-direction: row;
    }
  }

  .dots-container {
    display: none;
  }

  @media (min-width: 1129px) {
    .dots-container {
      display: flex;
      height: 2.5rem;
      margin-left: -30px;
      max-width: 144px;
    }
  }

  .dots-placeholder {
    color: white;
    font-size: 2rem;
  }

  .highlights-title {
    color: white;
    font-family: 'Crimson Text', serif;
    font-size: 2.5rem;
    font-weight: 300;
    margin: 0;
  }

  @media (min-width: 1129px) {
    .highlights-title {
      margin-left: 1rem;
    }
  }

  .highlights-grid {
    display: grid;
    gap: var(--spacing-m, 1rem);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  @media (min-width: 1129px) {
    .highlights-grid {
      grid-template-columns: repeat(10, auto);
    }
  }

  .highlights-card {
    background: #fff;
    border: 1px solid var(--color-blue-200, #bfdbfe);
    border-radius: 8px;
    margin-bottom: var(--spacing-l, 1.5rem);
    min-height: 0;
  }

  @media (min-width: 1129px) {
    .highlights-card {
      margin-bottom: 0;
    }
  }

  .highlights-card-content {
    height: 100%;
    padding: var(--spacing-m, 1rem);
  }

  /* Standard card styles */
  .standard-card-item {
    margin-top: var(--spacing-xl, 2rem);
  }

  .standard-card-item:first-of-type {
    margin-top: 0;
  }

  @media (min-width: 641px) {
    .standard-card-item {
      margin: 0;
    }
  }

  .standard-card-content {
    height: 100%;
  }

  /* Shared card placeholder styles */
  .card-placeholder {
    padding: 1rem;
    background: white;
    border: 1px solid var(--color-neutral-200, #ddd);
    border-radius: 4px;
    min-height: 8rem;
  }
  
  .card-placeholder h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.125rem;
    color: var(--color-blue-400, #00274C);
    font-weight: 600;
  }

  .card-subtitle {
    color: var(--color-neutral-300, #637381);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }
  
  .card-content {
    color: var(--color-neutral-300, #637381);
    font-size: 0.875rem;
  }

  .card-info-row {
    display: flex;
    align-items: flex-start;
    margin-top: var(--spacing-xs, 0.5rem);
    gap: var(--spacing-xs, 0.5rem);
  }

  .card-info-row svg {
    color: var(--color-indigo-300, #a78bfa);
    flex-shrink: 0;
    margin-top: 2px;
  }
</style>

<script define:vars={{ cardPanelData: data, template, title, cards }}>
