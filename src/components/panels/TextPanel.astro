---
/**
 * TextPanel - Various text content layouts
 * Converted from src/components/panels/index.js TextPanel
 * 
 * Templates: callout, body_width_text, text_group, full_width_text_template, 
 *            grid_text_template_with_linked_title, image_text_body
 */
import PanelTemplate from './PanelTemplate.astro';

interface Props {
  data: any;
}

const { data } = Astro.props;
const title = data.field_title;
const template = data.relationships.field_text_template.field_machine_name;
const cards = data.relationships.field_text_card || [];
---


<PanelTemplate title={title}>
  {cards.length > 0 && cards[0].field_body?.processed && (
    <div class="text-panel-body" set:html={cards[0].field_body.processed} />
  )}
</PanelTemplate>

<style>
  .text-panel-body {
    line-height: 1.6;
    margin-bottom: 2rem;
  }
</style>
