---
import { Image } from 'astro:assets';
/**
 * Page Header Component - Converted to Astro
 * Original: src/components/page-header.js
 * 
 * Displays page title, breadcrumb, summary, and optional hero image
 */
import Breadcrumb from './Breadcrumb.astro';
import { generateBreadcrumb } from '../../plugins/create-breadcrumb-astro';
import { astro } from 'globals';

interface Props {
  breadcrumb?: string;
  title: string;
  summary?: string;
  image?: any;
}

const { breadcrumb, title, summary, image } = Astro.props;

// Extract image data if available
const imageData = image?.relationships?.field_media_image?.localFile?.childImageSharp?.gatsbyImageData;
const imageAlt = image?.field_media_image?.alt || '';
const imageSrc = image?.relationships?.field_media_image?.localFile?.publicURL || 
                 image?.relationships?.field_media_image?.url;

// Use the breadcrumb prop directly if provided, otherwise generate default
let breadcrumbData = breadcrumb;
if (!breadcrumbData) {
  // Only generate breadcrumb if none provided
  breadcrumbData = generateBreadcrumb(
    { title: title, slug: '/current' },
    [{ title: 'Parent', slug: '/parent' }]
  );
}
---

<div class="page-header-wrapper">
  <div class="page-header-container">
    <header class="page-header">
      <div class="page-header-content">
        <Breadcrumb data={breadcrumbData} />
        
        <h1 class="page-title">{title}</h1>
        
        {summary && (
          <p class="page-summary">{summary}</p>
        )}
      </div>
      
      {imageSrc && (
        <div class="page-header-image">
          <Image src={imageSrc} alt={imageAlt} width={800} height={400} loading="eager" />
        </div>
      )}
    </header>
  </div>
</div>

<style>
  .page-header-wrapper {
    border-bottom: 1px solid var(--color-neutral-100, #e0e0e0);
  }
  
  .page-header-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .page-header {
    display: block;
  }
  
  .page-header-content {
    padding-bottom: 2rem;
    padding-right: 3rem;
    padding-top: 0;
  }
  
  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-blue-400, #00274C);
    margin-bottom: 1rem;
    margin-top: 0;
  }
  
  .page-summary {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-neutral-400, #666);
    margin: 0;
  }
  
  .page-header-image {
    margin: 0 -1rem;
  }
  
  .page-header-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  /* Desktop layout: side-by-side */
  @media (min-width: 640px) {
    .page-header {
      display: flex;
      align-items: stretch;
      min-height: 350px;
    }
    
    .page-header-content {
      flex: 1 1 0;
    }
    
    .page-header-image {
      flex: 0 1 50%;
      margin: 0;
      position: relative;
      overflow: hidden;
    }
    
    .page-header-image img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
