---
/**
 * Home Page Template
 * Converted from src/templates/home.js
 */
import Layout from '../layouts/Layout.astro';
import Panels from '../components/panels/Panels.astro';

const { node } = Astro.props;
const { title, relationships } = node;
const panels = relationships?.field_panels || [];
//console.log('Home page panels:', panels[0].relationships.field_hero_template);
---

<Layout title={title}>
  <!-- Debug info -->
  <div style="background: yellow; padding: 1rem; margin: 1rem;">
    <strong>Debug:</strong> Found {panels?.length || 0} panels
    {panels?.map((panel, index) => (
      <div key={index}>
      Panel {index + 1}: {panel?.type || panel?.__typename || 'unknown'}
      </div>
    ))}
  </div>
  
  <Panels data={panels} />
</Layout>
